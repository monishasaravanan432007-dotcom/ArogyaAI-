<script>
// AI Speak
function aiSpeak(text){
  document.getElementById('aiGuide').textContent = 'AI Guide: '+text;
  const utter = new SpeechSynthesisUtterance(text);
  utter.lang = 'ta-IN';
  speechSynthesis.speak(utter);
}

// Emergency Click
document.getElementById('emergencyBtn').addEventListener('click', ()=>{
  aiSpeak("Detecting location / роЗро░рпБрокрпНрокро┐роЯроорпН роХрогрпНроЯро▒ро┐роХро┐ро▒родрпБ");
  document.getElementById('mapContainer').style.display='block';
  document.getElementById('ambulanceList').style.display='block';
  if(navigator.geolocation){
    navigator.geolocation.getCurrentPosition(pos=>{
      const lat=pos.coords.latitude, lng=pos.coords.longitude;
      aiSpeak(`Location detected: ${lat.toFixed(3)}, ${lng.toFixed(3)}`);
      document.getElementById('mapContainer').innerHTML = `<iframe width="100%" height="100%" style="border:0" src="https://maps.google.com/maps?q=${lat},${lng}&output=embed"></iframe>`;
      const ambDiv = document.getElementById('ambulances');
      const ambulances = [
        {name:'Relief Ambulance', distance:'3 km', driver:'Ramesh', phone:'9876543210'},
        {name:'Erode Kongu Ambulance', distance:'5 km', driver:'Suresh', phone:'9876501234'},
        {name:'SR Ambulance', distance:'6 km', driver:'Karthik', phone:'9876512345'}
      ];
      ambDiv.innerHTML='';
      ambulances.forEach(a=>{
        const div=document.createElement('div');
        div.innerHTML=`<strong>${a.name}</strong> (${a.distance})<br>Driver: ${a.driver}<br>Phone: <a href="tel:${a.phone}">${a.phone}</a>`;
        ambDiv.appendChild(div);
      });
    });
  } else { aiSpeak('Geolocation not supported / роЖродро░ро╡рпБ роЗро▓рпНро▓рпИ'); }
});

// Show Appointment
function showAppointmentSection(){ 
  document.getElementById('appointmentSection').style.display='block';
  aiSpeak('Opening appointment form / роЕрокрпНрокро╛ропро┐рогрпНроорпЖрогрпНроЯрпН рокроЯро┐ро╡роорпН родро┐ро▒роХрпНроХрокрпНрокроЯрпНроЯродрпБ');
}

// Submit Appointment
function submitAppointment(){
  const name = document.getElementById('patientName').value;
  const address = document.getElementById('patientAddress').value;
  const district = document.getElementById('patientDistrict').value;
  const problem = document.getElementById('patientProblem').value;
  const days = document.getElementById('problemDays').value;
  const visit = document.getElementById('visitType').value;
  aiSpeak(`Appointment submitted for ${name} / ${name} роЕро╡ро░рпБроХрпНроХро╛рой роЕрокрпНрокро╛ропро┐рогрпНроорпЖрогрпНроЯрпН роЪрооро░рпНрокрпНрокро┐роХрпНроХрокрпНрокроЯрпНроЯродрпБ`);
  alert('Appointment Submitted! / роЕрокрпНрокро╛ропро┐рогрпНроорпЖрогрпНроЯрпН роЪрооро░рпНрокрпНрокро┐роХрпНроХрокрпНрокроЯрпНроЯродрпБ');
}

// IoT Simulation
let hr=72,temp=36.8,spo2=98;
function updateIoT(){
  hr+=Math.floor(Math.random()*3-1);
  temp+=(Math.random()*0.2-0.1);
  spo2+=Math.floor(Math.random()*2-1);
  document.getElementById('heartRate').textContent = hr;
  document.getElementById('temperature').textContent = temp.toFixed(1);
  document.getElementById('spo2').textContent = spo2;
  let risk='Normal', color='#2a9df4';
  if(hr>110 || temp>38 || spo2<94){risk='High'; color='#d9534f';}
  document.getElementById('riskPercent').textContent = risk;
  document.getElementById('riskPercent').style.background = color;
}
setInterval(updateIoT,2000);
</script>
